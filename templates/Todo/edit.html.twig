{% extends 'base.html.twig' %}

{% block body %}
    {% if todo is defined %}
        <h1>Edit todo n°{{ todo.id }}</h1>
        {% if errorMsg is defined %}
            <p style="color: red;">{{ errorMsg }}</p>
        {% endif %}
        <form method="post">
            <label for="name">Nom de la tâche :</label>
            <input type="text" name="name" id="name" value="{{ todo.name }}" required><br>
            <label for="content">Contenu de la tâche :</label>
            <textarea name="content" id="content" placeholder="contenu..." required>{{ todo.content }}</textarea><br>
            <input type="submit" name="submit" value="Créer la tâche !">
        </form>
    {% else %}
        <h1>Problème lors de la récupération de la todo en BDD</h1>
    {% endif %}
{% endblock %}